{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "auth": [
        "./src/auth"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "configs": [
        "./src/configs"
      ],
      "i18n": [
        "./src/i18n"
      ],
      "layouts": [
        "./src/layouts"
      ],
      "modules/errors": [
        "./src/modules/errors"
      ],
      "pages": [
        "./src/pages"
      ],
      "partials": [
        "./src/partials"
      ],
      "routing": [
        "./src/routing"
      ],
      "theme": [
        "./src/theme"
      ],
      "utils": [
        "./src/utils"
      ]
    }
  },
  "include": [
    "src"
  ]
}